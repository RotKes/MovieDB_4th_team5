<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_film_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a501.itis.kpfu.ru.themoviedbapplication.activity.FilmInfoActivity">

    <ImageView
        android:id="@+id/filmPoster"
        android:layout_width="180dp"
        android:layout_height="250dp"
        />



    <TextView
        android:id="@+id/filmOverview"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_below="@+id/filmPoster"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/filmName"
        android:textStyle="italic"
        android:textColor="@color/titleColor"
        android:textSize="@dimen/text_size_film_info"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/filmYear" />

    <TextView
        android:id="@+id/filmYear"
        android:textSize="@dimen/text_size_film_info"
        android:textColor="@color/defaultColorText"
        android:text="RELEASE DATE :"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@+id/filmName"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/filmYearValue"
        android:textSize="@dimen/text_size_film_info"
        android:layout_width="140dp"
        android:layout_height="25dp"
        android:layout_below="@+id/filmYear"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/filmCountry"
        android:textSize="@dimen/text_size_film_info"
        android:text="COUNTRY :"
        android:textColor="@color/defaultColorText"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_below="@+id/filmYearValue"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/filmCountryName"
        android:textSize="@dimen/text_size_film_info"
        android:layout_width="140dp"
        android:layout_height="25dp"
        android:layout_below="@+id/filmCountry"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
